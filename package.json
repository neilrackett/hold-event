{
  "name": "hold-event",
  "version": "1.1.1",
  "author": "Yomotsu",
  "license": "MIT",
  "main": "dist/hold-event.js",
  "jsnext:main": "dist/hold-event.module.js",
  "module": "dist/hold-event.module.js",
  "types": "dist/index.d.ts",
  "repository": "yomotsu/hold-event",
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.2",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "eslint-config-mdcs": "^5.0.0",
    "rollup": "^4.42.0",
    "terser": "^5.42.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "dev": "rollup --config --watch",
    "build": "rollup --config && terser dist/hold-event.js -o dist/hold-event.min.js --comments '/^!/'",
    "lint": "eslint src --ext ts"
  },
  "browserslist": [
    "> 1%",
    "last 3 versions",
    "not dead"
  ],
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": "mdcs",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": 0,
      "@typescript-eslint/no-unused-vars": 1,
      "indent": 0,
      "@typescript-eslint/indent": [
        "error",
        "tab",
        {
          "SwitchCase": 1,
          "flatTernaryExpressions": true
        }
      ],
      "no-multi-spaces": [
        0
      ],
      "key-spacing": [
        0
      ]
    }
  },
  "keywords": [
    "keyboard",
    "event"
  ]
}
